

<%- include("partials/header"); -%>

<div class="container-fluid text-center">
    <h1 style="color: #C92C6D; margin-bottom: 2px;" class="display-1 heading">HMS GLOBAL</h1>
    <p style="color: #C92C6D; margin-bottom: 3rem; font-style: italic;">"Hospitality beyond borders."</p>
  </div>
  
  <div style="margin-bottom: 7.5vh;" class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card">
          <div class="card-header text-center">
            <h4>Sign Up</h4>
          </div>
          <div class="card-body">
            <form action="/register" method="POST">
              <div class="form-group">
                <label for="name">Email Address</label>
                <input type="email" required name="email" class="form-control" placeholder="Enter your email">
              </div>
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" required name="name" class="form-control" placeholder="Enter your full name">
              </div>
              <div class="form-group">
                <label for="name">Phone No</label>
                <input type="tel" minlength="10" maxlength="10" required name="phone" class="form-control" placeholder="Enter your phone number">
              </div>
              <div class="form-group">
                <label for="name">Username</label>
                <input type="text" minlength="6" maxlength="6" required name="username" class="form-control" placeholder="Pick a username">
              </div>
              <div class="form-group">
                <label for="name">Password</label>
                <input type="password" required name="password" minlength="6" class="form-control" placeholder="Enter your password">
              </div>
              <div class="form-group">
                <label for="name">Security Question : "What is your favourite food?"</label>
                <input type="text" required name="secAnswer" class="form-control" placeholder="Enter answer here(recommended to use lower_case)">
              </div>
              <div class="d-flex justify-content-center">
                <button style="margin: 1.5vh; background-color: #C92C6D; color: white;" type="submit" class="btn btn-block text-center">Sign up!</button>
              </div>
            </form>
            <div class="container text-center">
              <a href="/login"><button style="margin: 1vh; background-color: #C92C6D; color: white;" type="button" class="btn btn-block text-center">Already a user? Log In</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <%- include("partials/footer"); -%>