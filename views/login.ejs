

<%- include("partials/header"); -%>



<div class="container-fluid text-center">
    <h1 style="color: #C92C6D; margin-bottom: 2px;" class="display-1 heading">HMS GLOBAL</h1>
    <p style="color: #C92C6D; margin-bottom: 3rem; font-style: italic;">"Hospitality beyond borders."</p>
  </div>
  
  <div style="margin-bottom: 14vh;" class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card">
          <div class="card-header text-center">
            <h4>Log In</h4>
          </div>
          <div class="card-body">
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="name">Username</label>
                <input type="text" minlength="6" maxlength="6" required name="username" class="form-control" placeholder="Enter your username">
              </div>
              <div class="form-group">
                <label for="name">Password</label>
                <input type="password" required name="password" minlength="6" class="form-control" placeholder="Enter your password">
              </div>
              <div class="d-flex justify-content-center">
                <button style="margin: 1.5vh; background-color: #C92C6D; color: white;" type="submit" class="btn btn-block text-center">Log In</button>
              </div>
            </form>
            <div class="container text-center">
              <a href="/forgotpass"><button style="margin: 1vh; background-color: #C92C6D; color: white;" type="button" class="btn btn-block text-center">Forgot Password?</button></a>
            </div>
            <div class="container text-center">
              <a href="/register"><button style="margin: 1vh; background-color: #C92C6D; color: white;" type="button" class="btn btn-block text-center">New User? Sign Up</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include("partials/footer"); -%>
