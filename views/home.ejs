
<%- include("partials/header"); -%>


<div class="container-fluid text-center">
    <h1 style="color: #C92C6D; margin-bottom: 2px;" class="display-1 heading">HMS GLOBAL</h1>
    <p style="color: #C92C6D; margin-bottom: 3rem; font-style: italic;">"Hospitality beyond borders."</p>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card">
          <div class="card-header text-center">
            <h4>Book a Room</h4>
          </div>
          <div class="card-body">
            <form action="/checkroom" method="POST">
              <div class="form-group">
                <label for="name">Check-in Date</label>
                <input type="date" id="date_picker" required name="checkInDate" class="form-control" placeholder="Enter your name">
              </div>
              <div class="form-group">
                <label for="name">Check-out Date</label>
                <input type="date" id="date_picker2" required name="checkOutDate" class="form-control" placeholder="Enter your name">
              </div>
              <div class="form-group">
                <label for="name">Select a Room Type</label>
                <select name="roomtype" required class="form-select" aria-label="Default select example">
                  <option value="" disabled="disabled" selected="selected">Please select a room type</option>
                  <option value="Single Bedded">Single Bedded</option>
                  <option value="Double Bedded">Double Bedded</option>
                  <option value="VIP Suite">VIP Suite</option>
                </select>
              </div>
              <div class="d-flex justify-content-center">
                <button style="margin: 3vh; background-color: #C92C6D; color: white;" type="submit" class="btn btn-block text-center">Check Availability</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div style="margin: auto;" class="row">
    <div style="margin: auto;" class="col-md-8">
      <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img style="border-radius: 30px;" src="https://cdn.britannica.com/96/115096-050-5AFDAF5D/Bellagio-Hotel-Casino-Las-Vegas.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img style="border-radius: 30px;" src="https://t4.ftcdn.net/jpg/01/72/36/17/360_F_172361703_znZIvSiPTVUI1ykGWt2SQBpENgYeDT32.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img style="border-radius: 30px;" src="https://images.summitmedia-digital.com/spotph/images/2019/10/25/benjarong1-1571972849.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img style="border-radius: 30px;" src="https://res.cloudinary.com/purnesh/image/upload/w_540,f_auto,q_auto:eco,c_limit/radisson-blu-plaza-1920-high.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img style="border-radius: 30px;" src="https://www.jestac.com.sg/wp-content/uploads/2018/10/Hotel-bathroom.jpg" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>   
    </div>
  </div>


<script language="javascript">
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0');
    var yyyy = today.getFullYear();

    today = yyyy + '-' + mm + '-' + dd;
    $('#date_picker2').attr('min',today);
    $('#date_picker').attr('min',today);
</script>


  <%- include("partials/footer"); -%>