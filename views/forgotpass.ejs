

<%- include("partials/header"); -%>



<div class="container-fluid text-center">
    <h1 style="color: #C92C6D; margin-bottom: 2px;" class="display-1 heading">HMS GLOBAL</h1>
    <p style="color: #C92C6D; margin-bottom: 3rem; font-style: italic;">"Hospitality beyond borders."</p>
  </div>
  
  <div style="margin-bottom: 14vh;" class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card">
          <div class="card-header text-center">
            <h4>Forgot Password</h4>
          </div>
          <div class="card-body">
            <form action="/forgotpass" method="POST">
              <div class="form-group">
                <label for="name">Username</label>
                <input type="text" minlength="6" maxlength="6" required name="username" class="form-control" placeholder="Enter your username">
              </div>
              <div class="d-flex justify-content-center">
                <button style="margin: 1.5vh; background-color: #C92C6D; color: white;" type="b" class="btn btn-block text-center">Submit</button>
              </div>
            </form>
            <div class="container text-center">
              <a href="/login"><button style="margin: 1vh; background-color: #C92C6D; color: white;" type="button" class="btn btn-block text-center">Log In</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


<%- include("partials/footer"); -%>